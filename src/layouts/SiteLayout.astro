---
import Chrome from './Chrome.astro';
import AlpineLightbox from '../components/AlpineLightbox.astro';

interface Props {
    title?: string;
    wide?: boolean;
}

const { title } = Astro.props.frontmatter || Astro.props;
const wide = Astro.props.wide || false;
---
<Chrome title={title}>
    <main class="mt-4 md:mt-10 mb-10 py-6 px-4 mx-auto bg-white" class:list={ {'max-w-5xl': !wide, 'max-w-7xl': wide } }>
        <slot />
        <AlpineLightbox />
    </main>
</Chrome>