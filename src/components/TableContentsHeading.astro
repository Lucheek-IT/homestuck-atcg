---
const { heading } = Astro.props;
---
<li>
    <a href={'#' + heading.slug} class="block py-1 px-4 underline text-web-blue" @click="open=false">
        {heading.text}
    </a>
    {
        heading.subheadings.length > 0 && (
            <ul class="ml-4 mb-4">
                {heading.subheadings.map((subheading) => (
                    <Astro.self heading={subheading} />
                ))}
            </ul>
        )
    }
</li>