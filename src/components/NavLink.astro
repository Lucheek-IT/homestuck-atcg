---
interface Props {
    href: string;
}

const { href } = Astro.props;
---
<a
    class="px-4 py-2 mt-2 bg-transparent text-sm font-semibold rounded-lg md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
    href={href}
>
    <slot/>
</a>
